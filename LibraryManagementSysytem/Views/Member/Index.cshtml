@using DataAccessLayer.entities
@using LibraryManagementSysytem.VMs
@model List<MemberListVM>

<script type="text/javascript">
    function confirmDelete() {
        return confirm("Are you sure you want to delete this member?");
    }

    function confirmEdit() {
        return confirm("Are you sure you want to edit this member?");
    }
</script>


<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Member List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Member" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Create New Member
            </a>
        </div>
    </div>
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col"></th>


            </tr>
        </thead>
        <tbody>
            @foreach (var mem in Model.OrderBy(u => u.First_Name))
            {
                <tr>
                    <th scope="row">@mem.ID</th>
                    <td>@mem.First_Name  @mem.Last_Name</td>
                    <td>@mem.Email</td>
                    <td>@mem.Phone</td>
                    @*                 <td>
                <div>
                <a href="@Url.Action("Edit", new { id = Lib.ID })" onclick="return confirmEdit();">Edit</a> |
                <a href="@Url.Action("Delete", new { id = Lib.ID })" onclick="return confirmDelete();">Delete</a>
                </div>
                </td> *@
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Member" asp-action="Edit" asp-route-id="@mem.ID" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Member" asp-action="Delete" asp-route-id="@mem.ID" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i>Delete
                            </a>
                        </div>

                    </td>

                </tr>
            }


        </tbody>
    </table>
</div>@{
}
