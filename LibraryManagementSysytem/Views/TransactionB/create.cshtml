@using LibraryManagementSysytem.ActionRequests.Transactions;
@model CreateTransActionBActionRequest;
<h2>Create New Transaction</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="CheckOutDate">Check Out Date</label>
        <input asp-for="CheckOut_Date" class="form-control" />
        <span asp-validation-for="CheckOut_Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="DueDate">Due Date</label>
        <input asp-for="Due_Date" class="form-control" />
        <span asp-validation-for="Due_Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="TotalCost">Total Cost</label>
        <input asp-for="Total_Cost" class="form-control" />
        <span asp-validation-for="Total_Cost" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="MemberID">Member</label>
        <input asp-for="MemberID_FK" class="form-control" />
        <span asp-validation-for="MemberID_FK" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="LibrarianID">Librarian</label>
        <input asp-for="LibrarianID_FK" class="form-control" />
        <span asp-validation-for="LibrarianID_FK" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
