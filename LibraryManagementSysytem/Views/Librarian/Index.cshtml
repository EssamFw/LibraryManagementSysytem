@using DataAccessLayer.entities
@using LibraryManagementSysytem.VMs
@model List<LibrarianListVM>

<script type="text/javascript">
    function confirmDelete() {
        return confirm("Are you sure you want to delete this librarian?");
    }

    function confirmEdit() {
        return confirm("Are you sure you want to edit this librarian?");
    }
</script>


<div class="container">
    
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Librarian List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Librarian" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Create New Librarian
            </a>
        </div>
    </div>
<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col"></th>
            
            
        </tr>
    </thead>
    <tbody>
        @foreach (var Lib in Model.OrderBy(u=>u.First_Name))
        {
            <tr>
                <th scope="row">@Lib.ID</th>
                <td>@Lib.First_Name  @Lib.Last_Name</td>
                <td>@Lib.Email</td>
                <td>@Lib.Phone</td>
@*                 <td> 
                    <div>
                            <a href="@Url.Action("Edit", new { id = Lib.ID })" onclick="return confirmEdit();">Edit</a> |
                            <a href="@Url.Action("Delete", new { id = Lib.ID })" onclick="return confirmDelete();">Delete</a>
                    </div>
                </td> *@
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Librarian" asp-action="Edit" asp-route-id="@Lib.ID" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                        </a>
                            <a asp-controller="Librarian" asp-action="Delete" asp-route-id="@Lib.ID" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i>Delete
                        </a>
                    </div>

                </td>

            </tr>
        }


    </tbody>
</table>
</div>