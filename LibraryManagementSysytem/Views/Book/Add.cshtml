@using LibraryManagementSysytem.ActionRequests.Books
@model AddBookActionRequest

<h2 style="color:darkblue">Add New Book</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    // Displays a summary of all errors
    @Html.ValidationMessageFor(m => m.Title)
    @Html.ValidationMessageFor(m => m.Genre)
    @Html.ValidationMessageFor(m => m.Author)
    @Html.ValidationMessageFor(m => m.Amount)
    @Html.ValidationMessageFor(m => m.LibrarianID_FK)
    @Html.ValidationMessageFor(m => m.Daily_Rent)

}


@* // Displays error for specific property
    //<input type="text" name="Author" /> *@



<form method="post" enctype="multipart/form-data">
    <div class="form-group">

        <label for="BookTitle">Book Title:</label>
        <input class="form-control" id="BookTitle" asp-for="Title" name="Title" />

    </div>


    <div class="form-group">
        <label for="Price">Author:</label>
        <input class="form-control" id="Price" asp-for="Author" />

    </div>

    <div class="form-group">
        <label for="Image">Book Image :</label>
        <input class="form-control" type="file" id="Image" name="imageFile" />
    </div>

    @* <div>
    <label for="Status">status:</label>
    <input class="form-control" id="Status" asp-for="status" />
    </div> *@

    <div class="form-group">
        <label for="Amount">Amount:</label>
        <input class="form-control" id="Amount" asp-for="Amount" />
    </div>

    <div class="form-group">
        <label for="DailyRent">Daily Rent:</label>
        <input class="form-control" id="DailyRent" asp-for="Daily_Rent" />
    </div>

    <div class="form-group">
        <label for="Genre">Genre:</label>
        <input class="form-control" id="Genre" asp-for="Genre" />
    </div>

    <div class="form-group">
        <label for="ID">Your ID:</label>
        <input class="form-control" id="ID" asp-for="LibrarianID_FK" />
    </div>



    <button class="btn-primary" type="submit">Add Book</button>

    @{
        ViewBag.Title = "Books List";
    }
</form>
